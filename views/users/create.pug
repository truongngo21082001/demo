extends ../layouts/kemmie.pug

block content

    h1 Create User

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST", enctype="multipart/form-data")
        .form-group
            label Name
            input(class="form-control" name="name", type="text" value=values ? values.name : "")
        .form-group
            label Phone
            input(class="form-control" name="phone", type="text" value=values ? values.phone : "")
        .form-group
            label Email
            input(class="form-control" name="email", type="text" value=values ? values.email : "")
        .form-group
            label Password
            input(class="form-control" name="password", type="text" value=values ? values.password : "")
        .form-group
            label Avatar
            input(class="form-control-file", name="avatar", type="file")

        button(class="btn btn-primary") Create